<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Item Detail</title>
    <link rel="stylesheet" href="/css/menu.css">
    <link rel="stylesheet" href="/css/item-detail.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
  <!-- Sidebar -->
  <div id="sidebar" class="sidebar">
    <div class="menu">
      <ul>
        <li><a href="/home"><i class="bi bi-house"></i> Dashboard</a></li>
        <li>
            <a class="d-flex justify-content-between align-items-center" href="#" data-bs-toggle="collapse" data-bs-target="#inventoryMenu" aria-expanded="false" aria-controls="inventoryMenu">
            <span><i class="bi bi-boxes"></i> Inventory</span>
            <i class="bi bi-chevron-down"></i>
          </a>
          <ul class="collapse list-unstyled ps-3" id="inventoryMenu">
            <li><a class="dropdown-item" href="/item"><i class="bi bi-box-seam"></i> Item</a></li>
            <li><a class="dropdown-item" href="/add-item"><i class="bi bi-plus-square"></i> Add Item</a></li>
          </ul>
        </li> 
        <li><a href="/category"><i class="bi bi-tag"></i> Category</a></li>
        <li><a href="/barcode"><i class="bi bi-upc-scan"></i> Barcode</a></li>
        <li><a href="/history"><i class="bi bi-clock-history"></i> History</a></li>
      </ul>
    </div>
    <div class="logout">
      <ul>
        <li><a href="/login"><i class="bi bi-box-arrow-right"></i> Logout</a></li>
      </ul>
    </div>
  </div>
  <div class="content">
    <div class="container1">
      <h1>Inventory Management System <a href="/profile"><i class="bi bi-person-circle"></i></a></h1>
    </div>
    <hr>
    <div class="container2">
      <h2>
        <a href="/item"><i class="bi bi-arrow-left-circle"></i></a> Item Details
      </h2>
    </div>
    <hr>
    <div class="item-header">
      <h3><%= item.name %></h3>
       <div class="item-actions">
        <i class="bi bi-patch-plus-fill" onclick="openModal('inboundModal')" style="cursor:pointer;"></i>
        <i class="bi bi-patch-minus-fill" onclick="openModal('outboundModal')" style="cursor:pointer;"></i>
        <a href="/item/edit/<%= item.id %>"><i class="bi bi-pencil-square"></i></a>
        <a href="#" onclick="confirmDelete('<%= item.id %>')"><i class="bi bi-trash3"></i></a>
        <script>
        function confirmDelete(id) {
          if (confirm("Are you sure you want to delete this item?")) {
            fetch(`/item/delete/${id}`, {
            method: 'DELETE'
          })
          .then(res => res.json())
          .then(data => {
          alert(data.message);
          window.location.href = '/item'; // redirect after deletion
          })
          .catch(err => console.error(err));
          }
        }
        </script>
      </div>
    </div>
    <p><strong>ID:</strong> <%= item.id %></p>
    <p><strong>SKU:</strong> <%= item.sku %></p>
    <p><strong>Category:</strong> <%= item.category_name || 'Uncategorized' %></p>
    <p><strong>Color:</strong> <%= item.color %></p>
    <p><strong>Quantity:</strong> <%= item.quantity %></p>
    <p><strong>Price:</strong> RM <%= item.price %></p>
    <p><strong>Barcode:</strong> <%= item.barcode %></p>
    <p><strong>Description:</strong> <%= item.description %></p>
    <p><strong>Created At:</strong> <%= item.created_at.toLocaleString() %></p>
    </div>
    <!-- Inbound Modal -->
      <div id="inboundModal" class="modal-overlay">
        <div class="modal-box">
          <span class="close-btn" onclick="closeModal('inboundModal')">&times;</span>
          <h2>Inbound Stock</h2>
          <form id="inboundForm" method="POST" action="/inbound/<%= item.id %>">
            <label for="amount">Quantity to add:</label>
            <input type="number" name="amount" id="inboundQty" class="form-control" placeholder="Enter quantity to add" required>
            <div class="modal-actions">
              <button onclick="closeModal('inboundModal')" class="btn btn-secondary">Cancel</button>
              <button type="submit" class="btn btn-success">Confirm</button>
            </div>
          </form>
        </div>
      </div>
      <!-- Outbound Modal -->
      <div id="outboundModal" class="modal-overlay">
        <div class="modal-box">
          <span class="close-btn" onclick="closeModal('outboundModal')">&times;</span>
          <h2>Outbound Stock</h2>
          <form id="outboundForm" method="POST" action="/outbound/<%= item.id %>">
            <label for="amount">Quantity to remove:</label>
            <input type="number" name="amount" id="outboundQty" class="form-control" placeholder="Enter quantity to remove" required>
            <div class="modal-actions">
              <button onclick="closeModal('outboundModal')" class="btn btn-secondary">Cancel</button>
              <button type="submit" class="btn btn-success">Confirm</button>
            </div>
          </form>
        </div>
      </div>
      <script>
        function openModal(id) {
          document.getElementById(id).style.display = "flex";
        }

        function closeModal(id) {
          const modal = document.getElementById(id);
          modal.style.display = "none";

          // ðŸ”¹ Clear input and result when modal closes
          if (id === "outboundModal") {
            document.getElementById("outboundQty").value = "";
          }
          if (id === "inboundModal") {
            document.getElementById("inboundQty").value = "";
          }
        }

        function submitInbound() {
          const qty = document.getElementById("inboundQty").value;
          fetch(`/item/${currentItemId}/inbound`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ amount: qty })
          }).then(res => {
            if (res.redirected) window.location.href = res.url;
          }).catch(err => console.error(err));
          closeModal('inboundModal');
        }

        function submitOutbound() {
          const qty = document.getElementById("outboundQty").value;
          fetch(`/item/${currentItemId}/outbound`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ amount: qty })
          }).then(res => {
            if (res.redirected) window.location.href = res.url;
          }).catch(err => console.error(err));
          closeModal('outboundModal');
        }
      </script>
</body>
</html>