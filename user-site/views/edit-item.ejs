<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Item</title>
    <link rel="stylesheet" href="/css/menu.css">
    <link rel="stylesheet" href="/css/edit-item.css">
    <link rel="icon" type="image/jpeg" href="/images/favicon.jpg">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script>
  document.addEventListener("DOMContentLoaded", () => {
    const links = document.querySelectorAll(".sidebar a");
    const currentPath = window.location.pathname;

    // First part after "/"
    let basePath = "/" + currentPath.split("/")[1];

    // Normalize mappings (group under parent menu)
    if (["/home"].includes(basePath)) {
      basePath = "/home";
    }
    if (["/item", "/edit-item"].includes(basePath)) {
      basePath = "/item";
    }
    if (["/add-item"].includes(basePath)) {
      basePath = "/add-item";
    }
    if (["/category", "/add-category", "/edit-category"].includes(basePath)) {
      basePath = "/category";
    }
    if (["/barcode"].includes(basePath)) {
      basePath = "/barcode";
    }
    if (["/history"].includes(basePath)) {
      basePath = "/history";
    }

    links.forEach(link => {
      if (link.getAttribute("href") === basePath) {
        link.classList.add("active");
      }
    });
  });
</script>
</head>
<body>
  <!-- Sidebar -->
  <div id="sidebar" class="sidebar">
    <div class="menu">
      <ul>
        <li><a href="/home"><i class="bi bi-house"></i> Dashboard</a></li>
        <li>
            <a class="d-flex justify-content-between align-items-center" href="#" data-bs-toggle="collapse" data-bs-target="#inventoryMenu" aria-expanded="false" aria-controls="inventoryMenu">
            <span><i class="bi bi-boxes"></i> Inventory</span>
            <i class="bi bi-chevron-down"></i>
          </a>
          <ul class="collapse list-unstyled ps-3" id="inventoryMenu">
            <li><a class="dropdown-item" href="/item"><i class="bi bi-box-seam"></i> Item</a></li>
            <li><a class="dropdown-item" href="/add-item"><i class="bi bi-plus-square"></i> Add Item</a></li>
          </ul>
        </li> 
        <li><a href="/category"><i class="bi bi-tag"></i> Category</a></li>
        <li><a href="/barcode"><i class="bi bi-upc-scan"></i> Barcode</a></li>
        <li><a href="/history"><i class="bi bi-clock-history"></i> History</a></li>
      </ul>
    </div>
    <div class="logout">
      <ul>
        <li><a href="/login"><i class="bi bi-box-arrow-right"></i> Logout</a></li>
      </ul>
    </div>
  </div>
  <div class="content">
    <div class="container1">
      <h1>Inventory Management System <a href="/profile"><i class="bi bi-person-circle"></i></a></h1>
    </div>
    <hr>
    <div class="container2">
      <h2>
        <a href="/item"><i class="bi bi-arrow-left-circle"></i></a> Edit Item
      </h2>
    </div>
    <hr>
    <div class="container3">
     <form id="editForm" action="/item/edit/<%= item.id %>" method="POST" enctype="multipart/form-data" class="form-grid">
      <label>Name</label>
      <input type="text" name="name" value="<%= item.name %>" required>

    <label for="sku">SKU</label>
    <input type="text" name="sku" value="<%= item.sku %>" required>

    <label for="category_id">Category</label>
    <select name="category_id" required>
      <% categories.forEach(function(cat) { %>
        <option value="<%= cat.id %>" <%= item.category_id === cat.id ? "selected" : "" %>>
          <%= cat.name %>
        </option>
      <% }) %>
    </select>

    <label for="color">Color</label>
    <input type="text" name="color" value="<%= item.color %>" required>

    <label for="quantity">Quantity</label>
    <p><%= item.quantity %></p>

    <label>Price</label>
    <input type="number" step="0.01" name="price" value="<%= item.price %>" required>

    <label for="barcode">Barcode</label>
    <input type="text" name="barcode" value="<%= item.barcode %>" required>

    <label>Description</label>
    <textarea name="description" required><%= item.description %></textarea>

    <div class="button-group">
      <button type="submit" class="btn1">Save</button>
      <button type="button" onclick="window.location.href='/item/<%= item.id %>'" class="btn2">Cancel</button>
    </div>
   </form>
   </div>
  </div>
</body>
</html>