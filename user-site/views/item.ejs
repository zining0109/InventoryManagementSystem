<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Item</title>
    <link rel="stylesheet" href="/css/menu.css">
    <link rel="stylesheet" href="/css/item.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
  <!-- Sidebar -->
  <div id="sidebar" class="sidebar">
    <div class="menu">
      <ul>
        <li><a href="/home"><i class="bi bi-house"></i> Dashboard</a></li>
        <li>
            <a class="d-flex justify-content-between align-items-center" href="#" data-bs-toggle="collapse" data-bs-target="#inventoryMenu" aria-expanded="false" aria-controls="inventoryMenu">
            <span><i class="bi bi-boxes"></i> Inventory</span>
            <i class="bi bi-chevron-down"></i>
          </a>
          <ul class="collapse list-unstyled ps-3" id="inventoryMenu">
            <li><a class="dropdown-item" href="/item"><i class="bi bi-box-seam"></i> Item</a></li>
            <li><a class="dropdown-item" href="/add-item"><i class="bi bi-plus-square"></i> Add Item</a></li>
          </ul>
        </li> 
        <li><a href="/category"><i class="bi bi-tag"></i> Category</a></li>
        <li><a href="/barcode"><i class="bi bi-upc-scan"></i> Barcode</a></li>
        <li><a href="/history"><i class="bi bi-clock-history"></i> History</a></li>
      </ul>
    </div>
    <div class="logout">
      <ul>
        <li><a href="/login"><i class="bi bi-box-arrow-right"></i> Logout</a></li>
      </ul>
    </div>
  </div>
  <div class="content">
    <div class="container1">
      <h1>Inventory Management System <a href="/profile"><i class="bi bi-person-circle"></i></a></h1>
    </div>
    <hr>
    <div class="container2">
    <h2 style="display: flex; align-items: center; gap: 10px;">
        Item 
        <form class="d-flex" method="GET" action="/item" style="margin-left: 55px;">
          <input class="form-control me-2" type="search" name="q" placeholder="Search name..." aria-label="Search">
          <button class="btn btn-outline-primary" type="submit"><i class="bi bi-search"></i></button>
        </form> 
        <a href="/add-item"><i class="bi bi-plus-square fs-4" style="padding-left: 500px;"></i></a>
    </h2>
    </div>
    <hr>
    <div class="container3">
      <table class="table table-bordered">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>SKU</th> 
          <th>Category</th>
          <th>Quantity</th>
          <th>Price</th>
          <th>Barcode</th>
        </tr>
      </thead>
      <tbody>
        <tr><td colspan="7"><hr></td></tr> <!-- Line after header -->
        <% if (items.length === 0) { %>
        <tr>
          <td colspan="7" style="text-align: center;">No item found</td>
        </tr>
        <% } else { %>
        <% items.forEach(item => { %>
        <tr>
          <td><%= item.id %></td>
          <td><a href="/item/<%= item.id %>"><%= item.name %></a></td>
          <td><%= item.sku %></td> 
          <td><%= item.category_name || 'Uncategorized' %></td>
          <td><%= item.quantity %></td>
          <td><%= item.price %></td>
          <td><%= item.barcode %></td>
        </tr>
        <tr><td colspan="7"><hr></td></tr> <!-- Line between items -->
        <% }) %>
        <% } %>
      </tbody>
    </table>
    </div>
  </div>
</body>
</html>