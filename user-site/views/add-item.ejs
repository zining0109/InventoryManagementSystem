<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Item</title>
    <link rel="stylesheet" href="/css/menu.css">
    <link rel="stylesheet" href="/css/add-item.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
  <!-- Sidebar -->
  <div id="sidebar" class="sidebar">
    <div class="menu">
      <ul>
        <li><a href="/home"><i class="bi bi-house"></i> Dashboard</a></li>
        <li>
            <a class="d-flex justify-content-between align-items-center" href="#" data-bs-toggle="collapse" data-bs-target="#inventoryMenu" aria-expanded="false" aria-controls="inventoryMenu">
            <span><i class="bi bi-boxes"></i> Inventory</span>
            <i class="bi bi-chevron-down"></i>
          </a>
          <ul class="collapse list-unstyled ps-3" id="inventoryMenu">
            <li><a class="dropdown-item" href="/item"><i class="bi bi-box-seam"></i> Item</a></li>
            <li><a class="dropdown-item" href="/add-item"><i class="bi bi-plus-square"></i> Add Item</a></li>
          </ul>
        </li> 
        <li><a href="/category"><i class="bi bi-tag"></i> Category</a></li>
        <li><a href="/barcode"><i class="bi bi-upc-scan"></i> Barcode</a></li>
        <li><a href="/history"><i class="bi bi-clock-history"></i> History</a></li>
      </ul>
    </div>
    <div class="logout">
      <ul>
        <li><a href="/login"><i class="bi bi-box-arrow-right"></i> Logout</a></li>
      </ul>
    </div>
  </div>
  <div class="content">
    <div class="container1">
      <h1>Inventory Management System <a href="/profile"><i class="bi bi-person-circle"></i></a></h1>
    </div>
    <hr>
    <div class="container2">
      <h2>Add Item</h2>
    </div>
    <hr>
    <div class="container3">
        <form action="/add-item" method="POST" class="form-grid">
            <label for="image">Item Image</label>
            <input type="file" name="image" accept="image/*" style="border: none; margin-top: 8px;">

            <label for="name">Name</label>
            <input type="text" id="name" name="name">

            <label for="sku">SKU</label>
            <input type="text" id="sku" name="sku">

            <label for="category">Category</label>
            <select name="category_id" class="form-control" required>
              <% categories.forEach(cat => { %><option value="<%= cat.id %>"><%= cat.name %></option><% }) %>
            </select>

            <label for="color">Color</label>
            <input type="text" id="color" name="color">

            <label for="quantity">Quantity</label>
            <input type="number" id="quantity" name="quantity">

            <label for="price">Price</label>
            <input type="text" id="price" name="price">

            <label for="barcode">Barcode</label>
            <input type="text" id="barcode" name="barcode">

            <label for="description">Description</label>
            <textarea id="description" name="description"></textarea>

            <div class="button-group">
                <button type="submit" class="btn1">Add</button>
                <button type="button" class="btn2" onclick="window.location.href='/item'">Cancel</button>
            </div>
        </form>
    </div>
  </div>
</body>
</html>