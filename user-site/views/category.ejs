<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Category</title>
    <link rel="stylesheet" href="/css/category.css">
    <link rel="stylesheet" href="/css/menu.css">
    <link rel="icon" type="image/jpeg" href="/images/favicon.jpg">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      document.addEventListener("DOMContentLoaded", () => {
      <% categories.forEach(cat => { %>
        fetch(`/category/<%= cat.id %>/items`)
          .then(res => res.json())
          .then(data => {
            const container = document.getElementById("items-<%= cat.id %>");
            if (data.length === 0) {
              container.innerHTML = "No items";
            } else {
              const limit = 3;
              const preview = data.slice(0, limit).map(i => i.name).join(", ");
              const fullList = data.map(i => `<li>${i.name}</li>`).join("");

              if (data.length > limit) {
                container.innerHTML = `
                  <div class="item-preview">
                    ${preview}...
                    <button class="expand-btn btn btn-sm btn-link p-0">▼</button>
                  </div>
                  <div class="item-full" style="display:none;">
                    <ul style="margin:0; padding-left:18px;">${fullList}</ul>
                    <button class="collapse-btn btn btn-sm btn-link p-0">▲</button>
                  </div>
                `;

                const expandBtn = container.querySelector(".expand-btn");
                const collapseBtn = container.querySelector(".collapse-btn");
                const previewEl = container.querySelector(".item-preview");
                const fullEl = container.querySelector(".item-full");

                expandBtn.addEventListener("click", () => {
                  previewEl.style.display = "none";
                  fullEl.style.display = "block";
                });

                collapseBtn.addEventListener("click", () => {
                  fullEl.style.display = "none";
                  previewEl.style.display = "block";
                });
              } else {
                container.innerHTML = `<ul style="margin:0; padding-left:18px;">${fullList}</ul>`;
              }
            }
          });
      <% }) %>
    });

      function deleteCategory(id) {
        id = Number(id);
        if (confirm("Are you sure you want to delete this category?")) {
        fetch(`/category/delete/${id}`, { method: "DELETE" })
        .then(res => res.json())
        .then(data => {
          if (data.success) {
            document.getElementById("row-" + id).remove();
            alert("Category deleted successfully.");
          } else {
            alert("Failed to delete category.");
          }
        })
        .catch(err => {
          console.error(err);
          alert("Error deleting category");
        });
        }
      }
  </script>
<script>
  document.addEventListener("DOMContentLoaded", () => {
    const links = document.querySelectorAll(".sidebar a");
    const currentPath = window.location.pathname;

    // First part after "/"
    let basePath = "/" + currentPath.split("/")[1];

    // Normalize mappings (group under parent menu)
    if (["/home"].includes(basePath)) {
      basePath = "/home";
    }
    if (["/item", "/edit-item"].includes(basePath)) {
      basePath = "/item";
    }
    if (["/add-item"].includes(basePath)) {
      basePath = "/add-item";
    }
    if (["/category", "/add-category", "/edit-category"].includes(basePath)) {
      basePath = "/category";
    }
    if (["/barcode"].includes(basePath)) {
      basePath = "/barcode";
    }
    if (["/history"].includes(basePath)) {
      basePath = "/history";
    }

    links.forEach(link => {
      if (link.getAttribute("href") === basePath) {
        link.classList.add("active");
      }
    });
  });
</script>
</head>
<body>
  <!-- Sidebar -->
  <div id="sidebar" class="sidebar">
    <div class="menu">
      <ul>
        <li><a href="/home"><i class="bi bi-house"></i> Dashboard</a></li>
        <li>
            <a class="d-flex justify-content-between align-items-center" href="#" data-bs-toggle="collapse" data-bs-target="#inventoryMenu" aria-expanded="false" aria-controls="inventoryMenu">
            <span><i class="bi bi-boxes"></i> Inventory</span>
            <i class="bi bi-chevron-down"></i>
          </a>
          <ul class="collapse list-unstyled ps-3" id="inventoryMenu">
            <li><a class="dropdown-item" href="/item"><i class="bi bi-box-seam"></i> Item</a></li>
            <li><a class="dropdown-item" href="/add-item"><i class="bi bi-plus-square"></i> Add Item</a></li>
          </ul>
        </li> 
        <li><a href="/category"><i class="bi bi-tag"></i> Category</a></li>
        <li><a href="/barcode"><i class="bi bi-upc-scan"></i> Barcode</a></li>
        <li><a href="/history"><i class="bi bi-clock-history"></i> History</a></li>
      </ul>
    </div>
    <div class="logout">
      <ul>
        <li><a href="/login"><i class="bi bi-box-arrow-right"></i> Logout</a></li>
      </ul>
    </div>
  </div>
  <div class="content">
    <div class="container1">
      <h1>Inventory Management System <a href="/profile"><i class="bi bi-person-circle"></i></a></h1>
    </div>
    <hr>
    <div class="container2">
      <h2 style="display: flex; align-items: center; gap: 10px;">Category
        <form class="d-flex" method="GET" action="/category">
          <input id="searchInput" class="form-control me-2" type="search" name="q" placeholder="Search name..." aria-label="Search" value="<%= search %>">
          <button class="btn btn-outline-primary" type="submit"><i class="bi bi-search"></i></button>
        </form> 
        <script>
          const searchInput = document.getElementById("searchInput");
          searchInput.addEventListener("search", () => {
            if (!searchInput.value) {
              window.location.href = "/category"; // reload full list
            }
          });
        </script>
        <a href="/add-category"><i class="bi bi-bookmark-plus fs-4" style="padding-left: 500px;"></i></a>
      </h2>
    </div>
    <hr>
    <div class="container3">
      <table class="table table-bordered">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Total Quantity</th> 
          <th>Description</th>
          <th>Items</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <tr><td colspan="6"><hr></td></tr> <!-- Line after header -->
        <% if (categories.length === 0) { %>
        <tr>
          <td colspan="6" style="text-align: center;">No item found</td>
        </tr>
        <% } else { %>
        <% categories.forEach(cat => { %>
        <tr>
          <td><%= cat.id %></td>
          <td><%= cat.name %></td> 
          <td><%= cat.total_quantity %></td>
          <td><%= cat.description %></td>
          <td>
            <div id="items-<%= cat.id %>">Loading...</div>
          </td>
          <td>
            <button onclick="window.location.href='/category/edit/<%= cat.id %>'" class="btn1">Edit</button>
            <button onclick="confirmDelete(<%= cat.id %>, <%= cat.total_quantity %>)" class="btn2">Delete</button>
          </td>
        </tr>
        <tr><td colspan="6"><hr></td></tr> <!-- Line between items -->
        <% }) %>
        <% } %>
      </tbody>
    </table>
    </div>
  </div>
<script>
  function confirmDelete(categoryId, itemCount) {
    if (itemCount > 0) {
      alert("This category cannot be deleted because it still has items.");
      return;
    }

    if (confirm('Are you sure you want to delete this category?')) {
      window.location.href = '/category/delete/' + categoryId;
    }
  }
</script>
</body>
</html>