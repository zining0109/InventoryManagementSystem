<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Category</title>
    <link rel="stylesheet" href="/css/edit-category.css">
    <link rel="stylesheet" href="/css/menu.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
  <!-- Sidebar -->
  <div id="sidebar" class="sidebar">
    <div class="menu">
      <ul>
        <li><a href="/home"><i class="bi bi-house"></i> Dashboard</a></li>
        <li>
            <a class="d-flex justify-content-between align-items-center" href="#" data-bs-toggle="collapse" data-bs-target="#inventoryMenu" aria-expanded="false" aria-controls="inventoryMenu">
            <span><i class="bi bi-boxes"></i> Inventory</span>
            <i class="bi bi-chevron-down"></i>
          </a>
          <ul class="collapse list-unstyled ps-3" id="inventoryMenu">
            <li><a class="dropdown-item" href="/item"><i class="bi bi-box-seam"></i> Item</a></li>
            <li><a class="dropdown-item" href="/add-item"><i class="bi bi-plus-square"></i> Add Item</a></li>
          </ul>
        </li> 
        <li><a href="/category"><i class="bi bi-tag"></i> Category</a></li>
        <li><a href="/barcode"><i class="bi bi-upc-scan"></i> Barcode</a></li>
        <li><a href="/history"><i class="bi bi-clock-history"></i> History</a></li>
      </ul>
    </div>
    <div class="logout">
      <ul>
        <li><a href="/login"><i class="bi bi-box-arrow-right"></i> Logout</a></li>
      </ul>
    </div>
  </div>
  <div class="content">
    <div class="container1">
      <h1>Inventory Management System <a href="/profile"><i class="bi bi-person-circle"></i></a></h1>
    </div>
    <hr>
    <div class="container2">
      <h2>
            <a href="/category"><i class="bi bi-arrow-left-circle"></i></a> Edit Category
      </h2>
    </div>
    <hr>
    <div class="container3">
        <form method="POST" action="/category/edit/<%= category.id %>" class="form-grid">
            <label>Name</label>
            <input type="text" name="name" value="<%= category.name %>" required>

            <label>Description</label>
            <textarea name="description" required><%= category.description %></textarea>

            <!-- Items row -->
            <label>Items</label>
            <div class="items-list">
              <% if (items.length === 0) { %>
                <p style="margin-top:10px;">No items in this category.</p>
              <% } else { %>
                <% items.forEach(item => { %>
                <div class="item-row">
                  <span class="item-name"><%= item.name %></span>
                  <button type="button" class="btn-move" onclick="openMoveModal('<%= item.id %>')">Move</button>
                </div>
              <% }) %>
              <% } %>
            </div>
            <div class="button-group">
                <button type="submit" class="btn1">Save</button>
                <button type="button" onclick="window.location.href='/category'" class="btn2">Cancel</button>
            </div>
        </form>
    </div>
    <div>
      <!-- Move Item Modal -->
      <div id="moveModal" style="display:none; position:fixed; top:0; left:0; width:100%; height:100%; background:rgba(0,0,0,0.6); justify-content:center; align-items:center; z-index: 1000;">
        <div style="background:white; padding:20px; border-radius:5px; width:300px;">
          <h3>Move Item</h3>
          <form id="moveForm" method="POST">
            <input type="hidden" name="oldCategoryId" value="<%= category.id %>">
            <label for="newCategory">Select New Category:</label>
            <select name="newCategoryId" id="newCategory" required style="height: 30px; border-radius:5px; box-sizing: border-box; border:1px solid rgba(0, 0, 0, 0.3);">
              <% allCategories.forEach(cat => { %>
              <% if (cat.id !== category.id) { %> <!-- donâ€™t show current category -->
                <option value="<%= cat.id %>"><%= cat.name %></option>
              <% } %>
              <% }) %>
            </select>
            <div style="margin-top:20px; margin-bottom:10px; display:flex;">
              <button type="submit" style="color: white; background-color: #0078D7; border: none; border-radius: 5px; cursor: pointer; width: 55px; height: 28px;">Move</button>
              <button type="button" onclick="closeMoveModal()" style="margin-left: 12px; border: none; border-radius: 5px; cursor: pointer; width: 65px; height: 28px;">Cancel</button>
            </div>
          </form>
        </div>
      </div>

      <script>
        function openMoveModal(itemId) {
          const form = document.getElementById("moveForm");
          form.action = `/item/${itemId}/move`; // set correct action
          document.getElementById("moveModal").style.display = "flex";
        }

        function closeMoveModal() {
          document.getElementById("moveModal").style.display = "none";
        }
      </script>

    </div>
  </div>
</body>
</html>